<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cybersix.markme">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavigationBar"
            android:label="@string/title_activity_navigation_bar" />
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".AccountSettingsActivity"></activity>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".PatientAssignmentActivity" />
        <activity android:name=".ListActivity" />
        <activity android:name=".ProblemListActivity" />
        <activity android:name=".RecordListActivity" />
        <activity android:name=".RecordInfoActivity" />
        <activity android:name=".BodyActivity" />
        <activity
            android:name=".LiveCameraActivity"
            android:exported="true" />
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
