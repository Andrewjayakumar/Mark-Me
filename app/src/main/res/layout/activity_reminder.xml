<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reminder"
    android:weightSum="16"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/set_reminder"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_weight="2.5" />
    <Button
        android:id="@+id/Weekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="weekly"
        android:layout_weight="1"
        android:text="@string/weekly" />
    <Button
        android:id="@+id/Biweekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="biweekly"
        android:layout_weight="1"
        android:text="@string/bi_weekly" />
    <Button
        android:id="@+id/Monthly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="monthly"
        android:layout_weight="1"
        android:text="@string/monthly" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/start_date"
        android:layout_weight="1.5"/>



    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <EditText
            android:id="@+id/StartDateyEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:textAlignment="center"
            android:ems="10"
            android:maxLength="4"
            android:enabled="false"
            android:inputType="number" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05"
            android:text="@string/slash"
            android:paddingTop="27sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:enabled="false" />

        <EditText
            android:id="@+id/StartDatemEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textAlignment="center"
            android:ems="10"
            android:maxLength="2"
            android:enabled="false"
            android:inputType="number" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05"
            android:text="@string/slash"
            android:paddingTop="27sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:enabled="false" />

        <EditText
            android:id="@+id/StartDatedEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textAlignment="center"
            android:ems="10"
            android:maxLength="2"
            android:enabled="false"
            android:inputType="number" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:ems="10"
            android:maxLength="2"
            android:enabled="false" />

    </android.support.v7.widget.LinearLayoutCompat>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/end_date"
        android:layout_weight="1.5"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <EditText
            android:id="@+id/EndDateyEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:textAlignment="center"
            android:ems="10"
            android:maxLength="4"
            android:enabled="false"
            android:inputType="number" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05"
            android:text="@string/slash"
            android:paddingTop="27sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:enabled="false" />

        <EditText
            android:id="@+id/EndDatemEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textAlignment="center"
            android:ems="10"
            android:maxLength="2"
            android:enabled="false"
            android:inputType="number" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05"
            android:text="@string/slash"
            android:paddingTop="27sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:enabled="false" />

        <EditText
            android:id="@+id/EndDatedEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textAlignment="center"
            android:ems="10"
            android:maxLength="2"
            android:enabled="false"
            android:inputType="number" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:ems="10"
            android:maxLength="2"
            android:enabled="false" />

    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/set_time"
        android:layout_weight="1.5"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <EditText
            android:id="@+id/hourEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textAlignment="center"
            android:ems="10"
            android:maxLength="4"
            android:enabled="false"
            android:inputType="number" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05"
            android:text="@string/colon"
            android:paddingTop="27sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:enabled="false" />

        <EditText
            android:id="@+id/minuteEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:textAlignment="center"
            android:ems="10"
            android:maxLength="2"
            android:enabled="false"
            android:inputType="number" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".80"
            android:ems="10"
            android:maxLength="2"
            android:enabled="false" />

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"

        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="2"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


</LinearLayout>